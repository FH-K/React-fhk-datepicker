{
  "name": "react-fhk-datepicker",
  "version": "1.3.9",
  "description": "A comprehensive React date and time picker library with multiple components, enhanced UI/UX, and timezone-safe date selection",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./src/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src/index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "webpack --mode production && webpack --config webpack.config.esm.cjs --mode production",
    "build:umd": "webpack --mode production",
    "build:esm": "webpack --config webpack.config.esm.cjs --mode production",
    "dev": "webpack --mode development --watch",
    "demo": "webpack --mode development && open demo/index.html",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FH-K/react-fhk-datepicker.git"
  },
  "keywords": [
    "react",
    "datepicker",
    "timepicker",
    "datetime",
    "calendar",
    "tailwind",
    "component",
    "typescript",
    "accessible",
    "timezone-safe"
  ],
  "author": "FH-K",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FH-K/react-fhk-datepicker/issues"
  },
  "homepage": "https://github.com/FH-K/react-fhk-datepicker#readme",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "style-loader": "^4.0.0",
    "webpack": "^5.100.1",
    "webpack-cli": "^6.0.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
